 
{
  "watch": [
    "server.js",
    "routes/",
    "middleware/",
    "services/",
    "utils/",
    "config/",
    "controllers/"
  ],
  "ignore": [
    "node_modules/",
    "logs/",
    "uploads/",
    "public/uploads/",
    "tests/",
    "docs/",
    "*.test.js",
    "*.log"
  ],
  "ext": "js,json",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": "1000",
  "verbose": true,
  "restartable": "rs"
}